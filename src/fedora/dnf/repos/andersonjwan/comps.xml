<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE comps PUBLIC "-//Red Hat, Inc.//DTD Comps info//EN" "comps.dtd">
<comps>
  <group>
    <id>andersonjwan-core</id>
    <name>My Core</name>
    <description>My set of core packages.</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="optional">texlive-scheme-full</packagereq>
      <packagereq type="default">gnome-tweaks</packagereq>
    </packagelist>
  </group>
  <group>
    <id>andersonjwan-cpp</id>
    <name>My C++ Development</name>
    <description>My set of packages for C++ development.</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="default">clang-devel</packagereq>
      <packagereq type="optional">cmake</packagereq>
      <packagereq type="optional">cppcheck</packagereq>
      <packagereq type="optional">doxygen</packagereq>
      <packagereq type="optional">python3-devel</packagereq>
      <packagereq type="optional">valgrind</packagereq>
    </packagelist>
  </group>
  <group>
    <id>andersonjwan-java</id>
    <name>My Java Development</name>
    <description>My set of packages for Java development.</description>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="optional">java-17-openjdk-devel</packagereq>
    </packagelist>
  </group>
  <group>
    <id>andersonjwan-devel</id>
    <name>My Development Tools</name>
    <default>false</default>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="mandatory">emacs</packagereq>
    </packagelist>
  </group>
</comps>
